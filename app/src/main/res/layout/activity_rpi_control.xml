<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.promlert.connectrpi.RpiControlActivity">

    <Button
        android:id="@+id/turn_on_led_2_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/led_2_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/led_2_image_view"
        app:layout_constraintTop_toTopOf="@+id/led_2_text_view"/>

    <Button
        android:id="@+id/turn_on_led_1_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_weight="1"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="@+id/led_1_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/led_1_image_view"
        app:layout_constraintTop_toTopOf="@+id/led_1_text_view"
        app:layout_constraintVertical_bias="0.307"/>

    <TextView
        android:id="@+id/led_1_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="LED 1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/led_2_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="LED 2"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/led_1_text_view"/>

    <ImageView
        android:id="@+id/led_1_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/led_1_text_view"
        app:layout_constraintStart_toEndOf="@+id/led_1_text_view"
        app:layout_constraintTop_toTopOf="@+id/led_1_text_view"
        app:srcCompat="@drawable/ic_light_off"/>

    <ImageView
        android:id="@+id/led_2_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/led_2_text_view"
        app:layout_constraintStart_toEndOf="@+id/led_2_text_view"
        app:layout_constraintTop_toTopOf="@+id/led_2_text_view"
        app:srcCompat="@drawable/ic_light_off"/>

</android.support.constraint.ConstraintLayout>
